<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoveViewWithAnimationActivity"
    android:layout_margin="@dimen/margin">

    <Button
        android:id="@+id/drawbaleOrRevealHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/drawbaleOrRevealHide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:backgroundTint="@color/purple_200"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/MoveViewWithAnimation"/>

   <!--  <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/grid_details"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHeight_percent="0.2"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/textView" />-->


    <Button
        android:id="@+id/MoveViewWithAnimation"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawbaleOrRevealHide"
        android:text="@string/MoveViewWithAnimation"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:backgroundTint="@color/purple_200"/>

    <Button
        android:id="@+id/moveViewWithFlingAnimation"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MoveViewWithAnimation"
        android:text="@string/moveViewWithFlingAnimation"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:backgroundTint="@color/purple_200"/>

    <Button
        android:id="@+id/enlargeViewWithZoomAnimation"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moveViewWithFlingAnimation"
        android:text="@string/enlargeViewWithZoomAnimation"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:backgroundTint="@color/purple_200"/>

    <Button
        android:id="@+id/animateMovementWithSpringAnimation"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enlargeViewWithZoomAnimation"
        android:text="@string/animateMovementWithSpringAnimation"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:backgroundTint="@color/purple_200"/>
</androidx.constraintlayout.widget.ConstraintLayout>